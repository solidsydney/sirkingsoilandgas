    <div class="col-xs-6 col-sm-6 col-md-3">
        <div class="news-feed">
          <% if @news.empty? %>
          <P>no news available for this region now </P>
          <% else %>
              <div class="recent-news">
                <h4 style="border-bottom: 2px solid #563d7c; ">Showing most recent news</h4>
                <% for new in @news %>
                    <a href="<%= news_path(new) %>">
                   <div>
                      <%= image_tag new.photo.url(:thumb) %>
                      <%= new.title %>
                     <span> <%= truncate(new.news_content) %> </span>
                   </div>
                    </a>
                <% end %>
              </div>
          <% end %>
        </div>

    </div>
  </div>

